<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/diagloSearch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_weight="1"
    android:background="@color/color_background_shadow"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/titlePage"
    android:paddingRight="@dimen/titlePage"
    android:paddingTop="@dimen/titlePage"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_radius_background_white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/paddingParam">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/title_search_dialog"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/titlePage" />

        <LinearLayout
            android:id="@+id/lnTitleArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/paddin_input"
            android:background="@drawable/btn_radius_background_grey"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/paddin_input"
            android:paddingRight="@dimen/paddin_input">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="Título"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/subtitlePage" />

            <EditText
                android:id="@+id/edt_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:layout_marginLeft="@dimen/paddin_input"
                android:background="@color/color_transparent"
                android:ems="10"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="right|center"
                android:hint="Título"
                android:inputType="textPersonName"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/subtitlePage" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnTypeArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/paddin_input"
            android:background="@drawable/btn_radius_background_grey"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/paddin_input"
            android:paddingRight="@dimen/paddin_input">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="Tipo"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/subtitlePage" />

            <TextView
                android:id="@+id/edt_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:layout_marginLeft="@dimen/paddin_input"
                android:layout_weight="1"
                android:background="@color/color_transparent"
                android:ems="10"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="right|center"
                android:hint="Selecionar"
                android:inputType="textPersonName"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="@dimen/subtitlePage" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnYearArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/paddin_input"
            android:background="@drawable/btn_radius_background_grey"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/paddin_input"
            android:paddingRight="@dimen/paddin_input">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="Ano"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/subtitlePage" />

            <EditText
                android:id="@+id/edt_year"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:layout_marginLeft="@dimen/paddin_input"
                android:layout_weight="1"
                android:background="@color/color_transparent"
                android:ems="10"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="right|center"
                android:hint="(Opcional)"
                android:inputType="number"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/subtitlePage" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnBtnArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/paddin_input"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/btnCancelSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/paddin_input"
                    android:background="@drawable/btn_radius_background_white"
                    android:orientation="horizontal"
                    android:padding="@dimen/paddin_input">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Cancelar"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/subtitlePage" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnStartSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/paddin_input"
                android:background="@drawable/btn_radius_background_primarydark"
                android:orientation="horizontal"
                android:padding="@dimen/paddin_input">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Pesquisar"
                    android:textColor="@color/colorIndicator"
                    android:textSize="@dimen/subtitlePage" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/paddin_input"
                    android:layout_weight="1"
                    android:fontFamily="@font/fontawesome_webfont"
                    android:text="@string/icon_search"
                    android:textColor="@color/colorIndicator"
                    android:textSize="@dimen/subtitlePage" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>