<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent"
    tools:context=".SelectedSearch">

    <include layout="@layout/menu_bar"/>


    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foregroundGravity="center">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/paddingParam">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/paddingParam"
                            android:background="@drawable/btn_radius_background_white"
                            android:gravity="top|center"
                            android:orientation="vertical"
                            android:padding="@dimen/paddingParam">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/paddin_input"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageLoad"
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:background="@drawable/btn_radius_background_grey"
                                    android:scaleType="centerCrop" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:paddingLeft="@dimen/paddin_input">

                                    <TextView
                                        android:id="@+id/textView10"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montserrat_bold"
                                        android:text="Título"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="@dimen/titlePage" />

                                    <TextView
                                        android:id="@+id/title"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="@dimen/paddin_input"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:text="meuTitulo"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textSize="@dimen/titlePage" />

                                    <TextView
                                        android:id="@+id/textView13"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montserrat_bold"
                                        android:text="Ano"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="@dimen/titlePage" />

                                    <TextView
                                        android:id="@+id/year"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:text="1999"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textSize="@dimen/titlePage" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/textView510"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montserrat_bold"
                                        android:gravity="left|center"
                                        android:text="Metascore"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="@dimen/subtitlePage" />

                                    <TextView
                                        android:id="@+id/metascore"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:gravity="left|center"
                                        android:text="metascore"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textSize="@dimen/titlePage" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/textView513"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montserrat_bold"
                                        android:gravity="center"
                                        android:text="IMDB"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="@dimen/subtitlePage" />

                                    <TextView
                                        android:id="@+id/imdb"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:gravity="center"
                                        android:text="imdb"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textSize="@dimen/titlePage" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/textView132"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montserrat_bold"
                                        android:gravity="right|center"
                                        android:text="Votos"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="@dimen/subtitlePage" />

                                    <TextView
                                        android:id="@+id/votes"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:gravity="right|center"
                                        android:text="votes"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textSize="@dimen/titlePage" />
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_radius_background_white"
                            android:gravity="top|center"
                            android:orientation="vertical"
                            android:padding="@dimen/paddingParam">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/paddingParam"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textVie4w5101"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:gravity="left|center"
                                    android:text="Diretor"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/subtitlePage" />

                                <TextView
                                    android:id="@+id/director"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:gravity="left|center"
                                    android:text="director"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="@dimen/titlePage" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/paddingParam"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textVie4w510"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:gravity="left|center"
                                    android:text="Produção"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/subtitlePage" />

                                <TextView
                                    android:id="@+id/production"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:gravity="left|center"
                                    android:text="production"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="@dimen/titlePage" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/paddingParam"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textVi3ew510"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:gravity="left|center"
                                    android:text="Prêmios"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/subtitlePage" />

                                <TextView
                                    android:id="@+id/awards"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:gravity="left|center"
                                    android:text="Awards"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="@dimen/titlePage" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/paddingParam"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textV2iew510"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:gravity="left|center"
                                    android:text="Escritor(es)"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/subtitlePage" />

                                <TextView
                                    android:id="@+id/writer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:gravity="left|center"
                                    android:text="writer"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="@dimen/titlePage" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/paddingParam"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView5110"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:gravity="left|center"
                                    android:text="Atores"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/subtitlePage" />

                                <TextView
                                    android:id="@+id/actor"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:gravity="left|center"
                                    android:text="actor"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="@dimen/titlePage" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/paddingParam"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/dd"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:gravity="left|center"
                                    android:text="Website (link)"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/subtitlePage" />

                                <TextView
                                    android:id="@+id/website"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:gravity="left|center"
                                    android:text="website"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="@dimen/titlePage" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/lnBtnArea"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:id="@+id/btnBack"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/paddin_input"
                                        android:background="@drawable/btn_radius_background_white"
                                        android:orientation="horizontal"
                                        android:padding="@dimen/paddin_input">

                                        <TextView
                                            android:id="@+id/textView7"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:fontFamily="@font/montserrat_bold"
                                            android:text="Voltar"
                                            android:textColor="@color/colorPrimaryDark"
                                            android:textSize="@dimen/subtitlePage" />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/btnToMyList"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/paddin_input"
                                    android:background="@drawable/btn_radius_background_primarydark"
                                    android:orientation="horizontal"
                                    android:padding="@dimen/paddin_input">

                                    <TextView
                                        android:id="@+id/textView8"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/montserrat_bold"
                                        android:text="Minha Lista"
                                        android:textColor="@color/colorIndicator"
                                        android:textSize="@dimen/subtitlePage" />

                                    <TextView
                                        android:id="@+id/textView9"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/paddin_input"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/fontawesome_webfont"
                                        android:text="@string/icon_bookmark"
                                        android:textColor="@color/colorIndicator"
                                        android:textSize="@dimen/subtitlePage" />


                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/paddin_input"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="@string/selected_description"
                            android:textColor="@color/colorIndicator"
                            android:textSize="@dimen/titlePage" />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

            <include layout="@layout/progressbar_custom" />

        </FrameLayout>

        <include layout="@layout/draw_bar"/>

    </android.support.v4.widget.DrawerLayout>

</LinearLayout>